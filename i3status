# i3status config -*- conf -*-

general {
    colors = true
    interval = 1
}

order += "volume master"
order += "ethernet _first_"
#order += "load"
order += "tztime local"

tztime local {
        format = "%d/%m/%Y %H:%M:%S"
}

load {
        format = "Δ %1min"
}

ethernet _first_ {
    format_up = "Ω %ip"
    format_down = "Ω down"
}

volume master {
    format = "♪ %volume"
    format_muted = "♪-"
    device = "pulse:0"
}
